<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="partner_yearly_sales_form" model="ir.ui.view">
        <field name="name">partner.yearly_sales.form</field>
        <field name="model">partner.yearly_sales</field>
        <field name="arch" type="xml">
            <form string="Customer Yearly Sales Amount">
                <group>
                    <field name="partner_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
            </form>
        </field>
    </record>

    <record id="partner_yearly_sales_tree" model="ir.ui.view">
        <field name="name">partner.yearly_sales.tree</field>
        <field name="model">partner.yearly_sales</field>
        <field name="arch" type="xml">
            <tree string="Customer Yearly Sales Amount">
                <field name="partner_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>

    <record id="partner_yearly_sales_search" model="ir.ui.view">
        <field name="name">partner.yearly_sales.search</field>
        <field name="model">partner.yearly_sales</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </search>
        </field>
    </record>

    <record id="partner_yearly_sales_action" model="ir.actions.act_window">
        <field name="name">Customer Yearly Sales Amount</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">partner.yearly_sales</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="partner_yearly_sales_menu" parent="sale.menu_product_pricelist_main"
              action="partner_yearly_sales_action" sequence="5" groups="sales_team.group_sale_manager"/>

</odoo>
