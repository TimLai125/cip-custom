<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_shop_form_shipment_day" model="ir.ui.view">
            <field name="name">sale.shop.shipment.day</field>
            <field name="model">sale.shop</field>
            <field name="inherit_id" ref="sale.view_shop_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='shop']" position="after">
                    <group name="sale_batch_confirm" string="SO Batch Confirmation" colspan="2">
                        <field name="shipment_day"/>
                    </group>
                </xpath>
           </field>
        </record>
    </data>
</openerp>