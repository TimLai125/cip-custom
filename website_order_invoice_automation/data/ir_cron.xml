<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">

    <record id="sale_order_check_invoiceable" model="ir.cron">
        <field name="name">Sales Order Lines Check Invoiceable</field>
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="nextcall"
               eval="(datetime.now() + timedelta(days=1)).strftime('%Y-%m-%d 02:00:00')"
               />
        <field name="model">sale.order.line</field>
        <field name="function">action_check_invoiceable_line</field>
    </record>

</odoo>
